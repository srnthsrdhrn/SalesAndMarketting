<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="300dp"
    android:elevation="10dp"
    android:backgroundTint="#e7dede"
    android:backgroundTintMode="add">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#28a4a4"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:text="Scheme Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/Schemename"/>
        </TableRow>
        <TableRow> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28a4a4"
            android:typeface="serif"
            android:layout_margin="10dp"
            android:text="Main Items"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/main_items" />
        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Offers"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#28a4a4"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:text="Offer Items"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/offer_items" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#28a4a4"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:text="Discount Amount"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/discount_amt"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#28a4a4"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:text="Per Discount"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/perdiscount"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#28a4a4"
                android:typeface="serif"
                android:layout_margin="10dp"
                android:text="Free item"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/freeitem"/>
        </TableRow>
       </TableLayout>
       <!-- <CheckBox
            android:id="@+id/chkSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />-->
    </LinearLayout>
    </ScrollView>
</LinearLayout>

</android.support.v7.widget.CardView>