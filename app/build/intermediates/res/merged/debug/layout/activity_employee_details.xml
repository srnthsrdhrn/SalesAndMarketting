<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/b9"
    android:theme="@style/AppTheme"
    android:textColor="#fff"
    tools:context=".EmployeeDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="1">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Employee Name"/>
                <Spinner
                    android:id="@+id/spn_emp_id"
                    android:gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="#000"
                        android:text="Head Name"/>
                    <Spinner
                        android:id="@+id/spn_head_id"
                        android:gravity="bottom"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:text="Incentive"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the Incentive here"
                        android:layout_margin="10dp"
                        android:inputType="numberDecimal"
                        android:id="@+id/emp_incentive"/>
                </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:text="Department"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:inputType="number"
                    android:id="@+id/dept_id"
                    android:text="Department"/>
            </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="#000"
                        android:text="Designation"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:inputType="number"
                        android:id="@+id/designation_id"
                        android:text="designation id"/>
                </TableRow>
            </TableLayout>
           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Employee Id"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emp_name"
                android:maxLength="10"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Head of the Employee"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emp_head"
                android:maxLength="10"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Department"/>
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emp_department"
                android:maxLength="10"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Designation"/>
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emp_designation"
                android:maxLength="10"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Incentive"/>
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emp_incentive"
                android:maxLength="10"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Is Admin"/>

            <RadioGroup
                android:id="@+id/rdo_select_post"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:orientation="vertical"/>

            <RadioButton
                android:id="@+id/no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="RadioButtonClicked"
                android:checked="true"
                android:text="NO "/>
            <RadioButton
                android:id="@+id/yes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="RadioButtonClicked"
                android:text="YES" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp">
            <!--  <Button
                  android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:background="@color/primary"
                 android:textColor="@android:color/white"
                 android:padding="5dp"
                  android:width="100dp"
                  android:gravity="center"
                 android:layout_marginTop="10dp"
                 android:id="@+id/save"
                 android:text="@string/item_stock_button_save"/>
                         <Button
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@color/primary"
                         android:textColor="@android:color/white"
                         android:padding="5dp"
                         android:gravity="center"
                         android:layout_marginTop="10dp"
                         android:id="@+id/cancel"
                         android:text="Cancel"/>-->
            <!--  <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Save"
                  android:padding="5dp"
                  android:background="@drawable/border"
                  android:id="@+id/save" />-->
            <ImageView android:src="@drawable/png_save"
                android:layout_width="121dp"
                android:layout_height="109dp"
                android:id="@+id/save" />
            <ImageView android:src="@drawable/png_cancel1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:id="@+id/cancel"

                android:layout_gravity="center_horizontal" />
            </LinearLayout>

           <!-- <include layout="@layout/footer_button"/>-->
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employee Details"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"/>-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="10sp"
                        android:gravity="left"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_span="5"
                        android:text="Employee Details"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:id="@+id/uname"
                        android:layout_column="2"
                        android:padding="10sp"
                        android:gravity="center"
                        android:drawableRight="@drawable/png_logout1">
                        android:layout_span="1"
                        android:textStyle="bold">
                    </TextView>
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
</FrameLayout>