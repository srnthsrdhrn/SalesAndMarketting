<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b9"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sakthisugars.salesandmarketing.Settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:hint="Time Interval to Store Location of Employee"
        android:id="@+id/time_interval"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Time"
        android:padding="5dp"
        android:background="@drawable/border"
        android:id="@+id/set_time"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Head Office Location"
        android:id="@+id/head_office_selection"
        android:padding="5dp"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Reporting time in 24-Hour Format"
            android:id="@+id/closing_time"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:id="@+id/closing_time_set"
            android:padding="5dp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Master Password"
            android:id="@+id/master_password"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:padding="5dp"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_heading_text_view"
                android:textAppearance="?android:attr/textAppearanceLarge"
               android:gravity="center_horizontal"/>-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="10sp"
                        android:gravity="left"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_span="4"
                        android:text="Settings"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:id="@+id/uname"
                        android:layout_column="2"
                        android:padding="10sp"
                        android:gravity="center"
                        android:drawableRight="@drawable/png_logout1">
                        android:layout_span="1"
                        android:textStyle="bold">
                    </TextView>
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
</FrameLayout>
